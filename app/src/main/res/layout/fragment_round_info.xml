<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">

    <Button
        android:layout_width="@dimen/mainBtnWidth"
        android:layout_height="@dimen/mainBtnHeight"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@color/btnBackgroundColor"
        android:layout_marginTop="@dimen/margin_bottom"
        android:layout_marginBottom="@dimen/margin_bottom"
        android:id="@+id/startGameBtn"
        android:text="@string/start_game"/>

    <ListView
        android:id="@+id/scoreboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/startGameBtn"/>

</RelativeLayout>